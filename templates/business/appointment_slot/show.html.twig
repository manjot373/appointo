    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment_slot.id }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ appointment_slot.startTime ? appointment_slot.startTime|date('Y-m-d H:i:s') : '' }}</td>
