{% extends 'business/base.html.twig' %}

{% block title %}AppointmentSlot index{% endblock %}

{% block body %}
    <h1>AppointmentSlot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartTime</th>
                <th>EndTime</th>
                <th>IsBooked</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appointment_slot in appointment_slots %}
            <tr>
                <td>{{ appointment_slot.id }}</td>
                <td>{{ appointment_slot.startTime ? appointment_slot.startTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment_slot.endTime ? appointment_slot.endTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment_slot.isBooked ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_appointment_slot_show', {'id': appointment_slot.id}) }}">show</a>
                    <a href="{{ path('app_appointment_slot_edit', {'id': appointment_slot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_appointment_slot_new') }}">Create new</a>
{% endblock %}
