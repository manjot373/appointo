{% extends 'admin/base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}

<div class="container">

<a class="btn btn-primary mb-4" href="{{ path('app_category_new') }}">Create new</a>

    <h1>Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-secondary"href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
