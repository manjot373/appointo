{% extends 'admin/base.html.twig' %}

{% block title %}New Business{% endblock %}

{% block stylesheets %}
<style>
body {
    font-family: 'Segoe UI', Arial, sans-serif;
    background: #f5f7fb;
    color: #333;
}

/* Page layout */
.form-page {
    max-width: 700px;
    margin: 50px auto;
    padding: 0 20px;
}

/* Card container */
.form-card {
    background: #ffffff;
    border-radius: 14px;
    padding: 30px 35px;
    box-shadow: 0 6px 15px rgba(0,0,0,0.06);
}

/* Header */
.form-card h1 {
    margin-top: 0;
    margin-bottom: 20px;
    font-size: 26px;
    color: #4a6cf7;
    text-align: center;
}

/* Symfony form default field refinement */
.form-card form input,
.form-card form textarea,
.form-card form select {
    width: 100%;
    padding: 10px 12px;
    margin-bottom: 15px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 15px;
}

.form-card form input:focus,
.form-card form textarea:focus,
.form-card form select:focus {
    border-color: #4a6cf7;
    outline: none;
    box-shadow: 0 0 0 2px rgba(74,108,247,0.15);
}

/* Submit button (Symfony default) */
.form-card button {
    background: #4a6cf7;
    color: #fff;
    padding: 10px 18px;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
}

.form-card button:hover {
    background: #3956d8;
}

/* Back link */
.back-link {
    display: block;
    margin-top: 20px;
    text-align: center;
    text-decoration: none;
    color: #4a6cf7;
    font-weight: 600;
}

.back-link:hover {
    text-decoration: underline;
}
</style>
{% endblock %}

{% block body %}

<div class="form-page">
    <div class="form-card">
        <h1>Add New Business</h1>

        {{ include('admin/business/_form.html.twig') }}

        <a href="{{ path('app_business_index') }}" class="back-link">
            ‚Üê Back to list
        </a>
    </div>
</div>

{% endblock %}
