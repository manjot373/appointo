{% extends 'admin/base.html.twig' %}

{% block title %}Business List{% endblock %}

{% block body %}
    <h1>Business List</h1>

     <a class="btn btn-primary mb-3" href="{{ path('app_business_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for business in businesses %}
            <tr>
                <td>{{ business.id }}</td>
                <td>{{ business.name }}</td>
                <td>{{ business.address }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_business_show', {'id': business.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('app_business_edit', {'id': business.id}) }}">edit</a>
                    
                    {# <a href="{{ path('business_user_new') }}" class="btn btn-primary">Create user</a> #}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
