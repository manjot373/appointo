{% block stylesheets %}
<style>
.btn-danger {
    background: #e74c3c;
    color: white;
    padding: 10px 18px;
    border-radius: 6px;
    font-weight: 600;
    border: none;
    cursor: pointer;
}

.btn-danger:hover {
    background: #c0392b;
}

</style>

{% endblock %}


<form method="post"
      action="{{ path('app_business_delete', {'id': business.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ business.id) }}">

    <button type="submit" class="btn-danger">
        Delete
    </button>

</form>
